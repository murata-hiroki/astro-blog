---
const { imageUrl, url, title, date, description } = Astro.props;
---

<article>
  <a href={url} class="post-link">
    <figure>
      <img src={imageUrl} alt="postImage" />
    </figure>
    <div>
      <h1 class="post-title">
        {title}
      </h1>
      <p class="post-date">{date}</p>
      <div class="post-description">
        <p>
          {description}
        </p>
      </div>
    </div>
  </a>
</article>

<style>
  article {
    width: 48%;
    margin: 0 1% 2.5%;
    height: 390px;
  }
  .post-link {
    display: block;
    padding: 0.6em;
    text-decoration: none;
    color: #333;
    background: #fff;
    height: 100%;
    box-shadow: 0 2px 5px rgb(0 0 0 / 9%);
    overflow: hidden;
    position: relative;
  }
  .post-title {
    font-size: 1.15em;
    margin-top: 0.5em;
    margin-bottom: 0.3em;
  }
  .post-date .post-description {
    opacity: 0.9;
    font-size: 0.85em;
  }
  .post-description p {
    font-size: 0.9em;
    margin-bottom: 0.3em;
    margin: 0 0 1.6em;
    line-height: 1.75;
  }
  figure {
    margin: 0;
    height: 200px;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
